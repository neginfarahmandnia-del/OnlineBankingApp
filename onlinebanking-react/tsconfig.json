{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [ "ES2022", "DOM" ],
    "module": "ESNext",
    "moduleResolution": "Bundler", // ⬅️ wieder Bundler
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [ "vitest/globals", "vite/client", "node", "@testing-library/jest-dom" ],
    "baseUrl": "."
  },
  "include": [ "src", "vite.config.ts" ]
}
